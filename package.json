{
  "name": "data-driven-dependencies-ts",
  "version": "1.0.0",
  "description": "Example of Next.js with Relay and MatchContainer using TypeScript",
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "MIT",
  "scripts": {
    "prepare": "(is-ci || husky install) && yarn relay:setup",
    "postinstall": "yarn deduplicate && patch-package",
    "deduplicate": "yarn yarn-deduplicate",
    "dev:next": "next dev",
    "dev:relay": "yarn relay --watch",
    "dev": "run-p dev:*",
    "build": "yarn relay && next build",
    "start": "next start",
    "start:mocks": "NODE_ENV=production node --require esbuild-register --require ./mocks --require dotenv/config ./node_modules/.bin/next start",
    "relay:setup": "mkdir -p src/__generated__ && touch queryMap.json",
    "update-schema": "node --require esbuild-register ./schema/printSchema.ts",
    "prerelay": "yarn update-schema",
    "relay": "relay-compiler",
    "lint:eslint": "eslint --ext .ts,tsx .",
    "lint:prettier": "prettier . --check",
    "lint:style": "stylelint **/*.{css,scss}",
    "lint": "npm-run-all lint:*",
    "typecheck": "tsc -b && tsc -b cypress",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "prettier --write .",
    "format:style": "yarn lint:style --fix",
    "format": "npm-run-all format:*",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-ci": "jest --silent --ci --coverage",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 'cypress open'",
    "pretest:e2e:run": "yarn build",
    "test:e2e:run": "PORT=8811 start-server-and-test start:mocks http://localhost:8811 'cypress run'",
    "ci": "yarn typecheck && yarn lint && yarn test",
    "storybook": "start-storybook -p 6006"
  },
  "dependencies": {
    "chance": "1.1.8",
    "graphql": "16.5.0",
    "next": "12.1.6",
    "nextjs-cors": "2.1.1",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-relay": "0.0.0-main-0a30fd6b",
    "relay-runtime": "0.0.0-main-0a30fd6b"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.4",
    "@commitlint/config-conventional": "16.2.4",
    "@faker-js/faker": "6.3.1",
    "@storybook/addon-a11y": "6.4.22",
    "@storybook/addon-actions": "6.4.22",
    "@storybook/addon-essentials": "6.4.22",
    "@storybook/addon-links": "6.4.22",
    "@storybook/builder-vite": "0.1.33",
    "@storybook/react": "6.4.22",
    "@tailwindcss/forms": "0.5.1",
    "@testing-library/cypress": "8.0.2",
    "@testing-library/dom": "8.13.0",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.2.0",
    "@testing-library/user-event": "14.1.1",
    "@types/chance": "1.1.3",
    "@types/jest": "27.5.0",
    "@types/node": "17.0.31",
    "@types/react": "18.0.9",
    "@types/react-relay": "13.0.2",
    "@types/relay-runtime": "13.0.3",
    "@typescript-eslint/eslint-plugin": "5.23.0",
    "@typescript-eslint/parser": "5.23.0",
    "autoprefixer": "10.4.7",
    "cypress": "9.6.1",
    "esbuild": "0.14.38",
    "esbuild-register": "3.3.2",
    "eslint": "8.15.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.1.5",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-testing-library": "5.4.0",
    "eslint-plugin-typescript-sort-keys": "2.1.0",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "jest": "28.1.0",
    "jest-environment-jsdom": "28.1.0",
    "lint-staged": "12.4.1",
    "msw": "0.39.2",
    "npm-run-all": "4.1.5",
    "patch-package": "6.4.7",
    "postcss": "8.4.13",
    "prettier": "2.6.2",
    "prettier-plugin-tailwindcss": "0.1.10",
    "relay-compiler": "0.0.0-main-9ff377ef",
    "start-server-and-test": "1.14.0",
    "stylelint": "14.8.2",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-recommended": "7.0.0",
    "stylelint-config-standard": "25.0.0",
    "tailwindcss": "3.0.24",
    "typescript": "4.6.4",
    "vite": "2.9.8",
    "yarn-deduplicate": "5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix",
    "*": "prettier -w -u"
  }
}
